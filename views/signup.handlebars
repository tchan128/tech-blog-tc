<div class="signup-container"> 
    <h2 class="login-title">Login</h2>

    <form class="form login-form">
        <div class="form-group username">
            <label for="username">Username</label>
            <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group password">
            <label for="password-login">Password<label>
            <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary submit" type="submit">Sign Up!</button>
        </div>
    </form>
    <a href="login" class="sign-up">Login instead</a>
</div>

<script src="./js/login.js"></script>