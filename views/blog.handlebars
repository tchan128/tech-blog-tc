<div class="blog-container">
    <div class="blog-title">
        <h1>{{blog.title}}</h1>
        <p>Posted by {{blog.user.name}} on {{format_date blog.date_created}}<p>
    </div>
    <div class="blog-content">
        <p>{{blog.content}}</p>
    </div>
</div>

<div class="add-comment-container">
    <div class="comment-header"></div>
    <form class="form login-form">
        <div class="form-group comment">
            <label for="new-comment">Comment<label>
            <textarea class="form-input scrollable-input" type="text" id="comment"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary submit comment-submit" type="submit">Submit</button>
        </div>
    </form>
</div>

{{#if comments.length}}
    <div class="comment-container">
        {{#each comments as |comment|}}
            <div class="comment-header"></div>
            <div class="blog-content">
                <p>{{comment.comment}}</p>
                <p>- {{comment.user.name}}, {{format_date comment.date_created}}</p>
            </div>
        {{/each}}
    </div>
{{/if}}